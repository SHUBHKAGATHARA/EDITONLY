@model IceCreame_MVC.Models.WishListModel

@{
    ViewData["Title"] = Model.WishListId == 0 ? "Add Item to Wishlist" : "Edit Wishlist Item";
    var users = ViewBag.Users as List<IceCreame_MVC.Models.UserModel>;
    var products = ViewBag.Products as List<IceCreame_MVC.Models.ProductModel>;
}

@* Add this link to your main _Layout.cshtml inside the <head> section for the Poppins font *@
@* <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet"> *@

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(135deg, #f0f4f8, #d9e2ec); /* Subtle light grey gradient */
        background-attachment: fixed;
    }

    .form-container-card {
        background-color: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.15);
        border: 1px solid rgba(255, 255, 255, 0.18);
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    /* Style for Select2 dropdowns to fit Bootstrap's look */
    .select2-container--bootstrap-5 .select2-selection {
        border-radius: 0.375rem !important;
        height: calc(1.5em + 0.75rem + 2px) !important;
        padding: 0.375rem 0.75rem !important;
    }

    .select2-container--bootstrap-5 .select2-selection__arrow {
        height: 100% !important;
    }
</style>

<div class="container mt-5">
    <div class="card form-container-card p-4">
        <h2 class="mb-4 text-center">@ViewData["Title"]</h2>

        <form asp-action="AddEdit" method="post">
            <input type="hidden" asp-for="WishListId" />

            <div class="mb-3">
                <label asp-for="UserId" class="form-label fw-bold">User</label>
                @* Added a class "searchable-dropdown" to target with JavaScript *@
                <select asp-for="UserId" class="form-select searchable-dropdown" asp-items="@(new SelectList(users, "UserId", "UserName"))">
                    <option value="">-- Select User --</option>
                </select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ProductId" class="form-label fw-bold">Product</label>
                @* Added a class "searchable-dropdown" to target with JavaScript *@
                <select asp-for="ProductId" class="form-select searchable-dropdown" asp-items="@(new SelectList(products, "ProductId", "ProductName"))">
                    <option value="">-- Select Product --</option>
                </select>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="WishListItemName" class="form-label fw-bold">Item Name</label>
                <input asp-for="WishListItemName" class="form-control" />
                <span asp-validation-for="WishListItemName" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="CreatedAt" class="form-label fw-bold">Created At</label>
                <input asp-for="CreatedAt" class="form-control" type="date" />
                <span asp-validation-for="CreatedAt" class="text-danger"></span>
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-x-circle"></i> Cancel</a>
                <button type="submit" class="btn btn-primary"><i class="bi bi-check-circle"></i> Save</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Initialize the Select2 library on our dropdowns
        $(document).ready(function() {
            $('.searchable-dropdown').select2({
                theme: "bootstrap-5" // Use the theme that matches Bootstrap 5
            });
        });
    </script>
}