@model IceCreame_MVC.Models.UserModel

@{
    bool isEditMode = Model.UserId != 0;
    ViewData["Title"] = isEditMode ? "Edit User" : "Add User";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h2 class="h4 mb-0 text-dark">
                        <i class="bi @(isEditMode ? "bi-pencil-square" : "bi-person-plus-fill") me-2"></i>
                        @ViewData["Title"]
                    </h2>
                </div>
                <div class="card-body">
                    <form asp-action="AddEdit" method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <input asp-for="UserId" type="hidden" />

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="UserName" class="form-label">User Name</label>
                                <input asp-for="UserName" class="form-control" placeholder="e.g., john.doe" />
                                <span asp-validation-for="UserName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label">Email Address</label>
                                <input asp-for="Email" class="form-control" placeholder="e.g., user@example.com" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Password" class="form-label">Password</label>
                                <input asp-for="Password" class="form-control" type="password" placeholder="Enter new password" />
                                <span asp-validation-for="Password" class="text-danger small"></span>
                                @if (isEditMode)
                                {
                                    <div class="form-text text-muted small">Leave blank to keep the current password.</div>
                                }
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Role" class="form-label">Role</label>
                                <select asp-for="Role" class="form-select">
                                    <option value="">-- Select Role --</option>
                                    <option value="Admin">Admin</option>
                                    <option value="Shopkeeper">Shopkeeper</option>
                                    <option value="Customer">Customer</option>
                                </select>
                                <span asp-validation-for="Role" class="text-danger small"></span>
                            </div>

                            @if (isEditMode)
                            {
                                <div class="col-md-6">
                                    <label asp-for="CreatedAt" class="form-label">Date Created</label>
                                    <input asp-for="CreatedAt" class="form-control" type="text" readonly disabled />
                                </div>
                            }
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-end">
                            <a asp-action="Index" class="btn btn-secondary me-2">
                                <i class="bi bi-x-circle me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-1"></i>Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}