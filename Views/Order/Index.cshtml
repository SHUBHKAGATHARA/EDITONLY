@model List<IceCreame_MVC.Models.OrderModel>

@{
    ViewData["Title"] = "Order";
    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    string searchString = ViewBag.SearchString as string ?? "";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Orders</h4>
            <a asp-action="AddEdit" class="btn btn-success btn-sm">Add New Order</a>
        </div>
        <div class="card-body">

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">@TempData["Success"]</div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }

            <!-- Client-side live search -->
            <div class="mb-3">
                <input type="text" id="searchInput" class="form-control" placeholder="Type to filter orders...">
            </div>

            <!-- Server-side search form (optional, already exists) -->
            <form method="get" class="mb-3 d-none">
                <div class="input-group">
                    <input type="text" name="searchString" class="form-control" value="@searchString" placeholder="Search orders..." />
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </form>

            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Order Name</th>
                            <th>User Name</th>
                            <th>Total Amount</th>
                            <th>Order Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="ordersTableBody">
                        @if (Model != null && Model.Any())
                        {
                            int index = (currentPage - 1) * 10 + 1;
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@index</td>
                                    <td>@item.OrderName</td>
                                    <td>@item.UserName</td>
                                    <td>₹@string.Format("{0:F2}", item.TotalAmount)</td>
                                    <td>@item.OrderDate?.ToString("dd MMM yyyy")</td>
                                    <td>
                                        <a asp-action="AddEdit" asp-route-id="@item.OrderId" class="btn btn-sm btn-primary">Edit</a>
                                        <form asp-action="Delete" method="post" asp-route-id="@item.OrderId" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this order?');">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                                index++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center p-4">No orders found.</td>
                            </tr>
                        }

                        <tr id="noResultsRow" style="display: none;">
                            <td colspan="6" class="text-center p-4">No orders match your search.</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <nav>
                <ul class="pagination justify-content-center">
                    @for (int i = 1; i <= totalPages; i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" href="?searchString=@searchString&page=@i">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const searchInput = document.getElementById('searchInput');
            const tableBody = document.getElementById('ordersTableBody');
            const rows = tableBody.getElementsByTagName('tr');
            const noResultsRow = document.getElementById('noResultsRow');

            searchInput.addEventListener('keyup', function () {
                const filter = searchInput.value.toLowerCase();
                let visibleRows = 0;

                for (let i = 0; i < rows.length; i++) {
                    if (rows[i].id === 'noResultsRow' || rows[i].querySelector('td[colspan="6"]')) continue;

                    let rowText = rows[i].textContent || rows[i].innerText;
                    if (rowText.toLowerCase().indexOf(filter) > -1) {
                        rows[i].style.display = "";
                        visibleRows++;
                    } else {
                        rows[i].style.display = "none";
                    }
                }

                // Show/hide "no results" row
                noResultsRow.style.display = (visibleRows === 0) ? "table-row" : "none";
            });
        });
    </script>
}
