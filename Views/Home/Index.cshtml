        z-index: 1;
    }

    .section-title {
        font-weight: 700;
        text-align: center;
        margin-bottom: 50px;
        color: white;
        font-size: 2.8rem;
        text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.7);
    }

    .hero-section {
        padding: 100px 20px;
        text-align: center;
    }

        .hero-section h1 {
            font-size: clamp(2.5rem, 5vw, 4rem); /* Change: Responsive font size */
            font-weight: 700;
            color: white;
            text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.8);
        }

        .hero-section p {
            font-size: 1.3rem;
            max-width: 650px;
            margin: 25px auto 40px;
            color: var(--text-light);
        }

    .btn-custom {
        font-size: 1.2rem;
        font-weight: 600;
        padding: 15px 40px;
        color: white;
        background: linear-gradient(45deg, var(--secondary-purple), var(--accent-pink));
        border: none;
        border-radius: 50px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

        .btn-custom:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(236, 76, 128, 0.4);
        }

        /* Change: Added accessible focus state */
        .btn-custom:focus-visible {
            outline: 3px solid var(--accent-pink);
            outline-offset: 3px;
        }

    .product-card {
        background-color: var(--card-bg);
        border-radius: 15px;
        border: 1px solid var(--border-color);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        backdrop-filter: blur(10px);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        color: white;
        height: 100%; /* Change: Ensures cards in a row have equal height */
    }

        .product-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 12px 40px rgba(0, 0, 0, 0.25);
        }

    .text-pink {
        color: var(--accent-pink) !important;
    }

    .site-footer {
        background-color: rgba(0, 0, 0, 0.4);
        backdrop-filter: blur(10px);
        color: var(--text-light);
        padding: 40px 0;
        margin-top: 50px;
    }

    .fade-in-section {
        opacity: 0;
        transform: translateY(40px);
        transition: opacity 0.8s ease-out, transform 0.8s ease-out;
    }

        .fade-in-section.is-visible {
            opacity: 1;
            transform: translateY(0);
        }

    .carousel-inner img {
        max-height: 400px;
        object-fit: cover;
        width: 100%;
        border-radius: 1rem;
    }

    .carousel-caption {
        background-color: rgba(0, 0, 0, 0.4);
        padding: 10px 15px;
        border-radius: 0.5rem;
    }

    .section-title {
        text-align: center;
        margin-bottom: 1.5rem;
        font-weight: 600;
        font-size: 2rem;
    }
</style>

